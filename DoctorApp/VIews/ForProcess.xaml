<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DoctorApp.VIews"
                    >
    <DataTemplate  x:Key="List">
        <DockPanel LastChildFill="False">
            <TextBlock Margin="5" DockPanel.Dock="Left" Text="{Binding PatientSurname}" FontSize="16"/>
            <TextBlock Margin="5" DockPanel.Dock="Left" Text="{Binding PatientName}" FontSize="16"/>
            <TextBlock Margin="5" DockPanel.Dock="Right" Text="{Binding Status}" FontSize="16"/>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>