<UserControl x:Class="DoctorApp.VIews.PAnalysis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoctorApp.VIews"
             mc:Ignorable="d" 
             d:DesignHeight="260" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="150,10,150,10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Analysis name:  " Margin="3"  FontSize="20"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="10,3,10,3" FontSize="16"/>
            <Button Content="Send" Command="{Binding SendCommand}" FontSize="18" Margin="15,20,15,5"/>
        </StackPanel>
    </Grid>
</UserControl>
