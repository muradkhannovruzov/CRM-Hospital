<UserControl x:Class="DoctorApp.VIews.PDiagnosisUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoctorApp.VIews"
             mc:Ignorable="d" 
             d:DesignHeight="260" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="100,10,100,10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Diagnosis:  " Margin="3"  FontSize="20" HorizontalContentAlignment="Center"/>
            <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" Width="550" Margin="10,3,10,3" FontSize="16"/>
            <Button Content="OK" Command="{Binding OkCommand}" FontSize="18" Margin="200,30,200,20"/>
        </StackPanel>
    </Grid>
</UserControl>
