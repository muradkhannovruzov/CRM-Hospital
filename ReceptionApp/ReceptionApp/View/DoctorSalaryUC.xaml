<UserControl x:Class="ReceptionApp.View.DoctorSalaryUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReceptionApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid Grid.Column="0" AutoGenerateColumns="False" ItemsSource="{Binding DoctorSalaries}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Doctor name" Binding="{Binding DrName}" Width="*"/>
                <DataGridTextColumn Header="Salary" Binding="{Binding DoctorProfit}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
